<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Login</h2>
  <%= form_with url: login_path, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700" %>
      <%= form.text_field :email, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>
    <div class="mb-4">
      <%= form.label :password, class: "block text-gray-700" %>
      <%= form.password_field :password, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>
    <%= form.submit "Login", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
  <% end %>
</div>
