<h1 class="text-2xl font-bold">Add Reminder for <%= @habit.name %></h1>

<%= form_with(model: [@habit, @reminder], local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :reminder_time, "Reminder Time", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.datetime_select :reminder_time, class: "border rounded w-full py-2 px-3 text-gray-700" %>
  </div>
  <div>
    <%= form.submit "Create Reminder", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>
