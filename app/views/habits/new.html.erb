<h2>Creating New Habits -category: <%= @category.name %></h2>

<h3>Habits list under this category:</h3>
<ul>
  <% @habits.each do |habit| %>
    <li><%= habit.name %></li>
  <% end %>
</ul>

<h3>Create Habits:</h3>
<%= form_with(model: [@category, @habit], local: true) do |form| %>
  <div>
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.submit "create", class: "btn btn-primary" %>
  </div>
<% end %>