<ul class="space-y-4">
  <% users.each do |user| %>
    <li class="p-4 bg-white shadow-md rounded-lg flex justify-between items-center">
      <div>
        <p class="font-bold text-gray-800"><%= user.email %></p>
      </div>
      <div>
        <% if current_user.followed_users.include?(user) %>
          <%= button_to 'Unfollow', follow_path(user), method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded" %>
        <% else %>
          <%= button_to 'Follow', follows_path(followed_id: user.id), method: :post, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>