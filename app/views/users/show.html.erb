<div>
  <h1 class="font-bold text-4xl">Users#show</h1>
  <p>Find me in app/views/users/show.html.erb</p>
  <h2><%= @user.email %> 的个人主页</h2>

  <h3>关注的用户</h3>
  <ul>
    <% @user.followed_users.each do |user| %>
      <li><%= user.email %></li>
    <% end %>
  </ul>

  <h3>粉丝</h3>
  <ul>
    <% @user.followers.each do |user| %>
      <li><%= user.email %></li>
    <% end %>
  </ul>

  <h2>好友习惯统计</h2>
  <ul>
    <% @friends_stats.each do |friend_stat| %>
      <li>
        <strong><%= friend_stat[:friend].email %></strong><br>
        今日完成率: <%= friend_stat[:daily_completion_rate] %>%<br>
        本周完成率: <%= friend_stat[:weekly_completion_rate] %>%
      </li>
    <% end %>
  </ul>
</div>
