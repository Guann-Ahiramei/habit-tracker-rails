<h1 class="text-2xl font-bold">New Time Block for <%= @habit.name %></h1>
<%= form_with(model: [@habit, @time_block], local: true) do |form| %>
  <div>
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>
  <div>
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>
  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>
  <div>
    <%= form.label :reason, "Reason (if incomplete)" %>
    <%= form.text_area :reason, rows: 3, placeholder: "Provide a reason if the task is incomplete" %>
  </div>
  <div>
    <%= form.submit 'Save', class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>