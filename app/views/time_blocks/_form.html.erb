<div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <%= form_with(model: [@habit, @time_block], local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :start_time, class: "block text-gray-700" %>
      <%= form.datetime_local_field :start_time, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>
    <div class="mb-4">
      <%= form.label :end_time, class: "block text-gray-700" %>
      <%= form.datetime_local_field :end_time, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>
    <div class="mb-4">
      <%= form.label :completed, class: "block text-gray-700" %>
      <%= form.check_box :completed, class: "mr-2" %>
    </div>
    <div class="mb-4">
      <%= form.label :reason, class: "block text-gray-700" %>
      <%= form.text_area :reason, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>
    <%= form.submit "保存", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
  <% end %>
</div>