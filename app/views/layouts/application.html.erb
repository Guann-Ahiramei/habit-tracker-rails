<!DOCTYPE html>
<html>
<head>
  <title>HabitTracker</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <nav class="bg-blue-500 p-4 text-white flex justify-between">
      <div>
        <%= link_to 'Home', root_path, class: "px-4" %>
        <%= link_to 'Habits', habits_path, class: "px-4" %>
        <%= link_to 'Categories', categories_path, class: "px-4" %>
      </div>
      <div>
        <% if session[:user_id] %>
          <%= link_to 'Logout', logout_path, method: :delete, class: "px-4" %>
        <% else %>
          <%= link_to 'Login', login_path, class: "px-4" %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </div>
</body>
</html>