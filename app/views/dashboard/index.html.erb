<div class="max-w-4xl mx-auto mt-10">
  <h2 class="text-3xl font-bold text-gray-800 mb-6">Stat Dashboard</h2>

  <!-- 数据统计 -->
  <div class="grid grid-cols-2 gap-4">
    <div class="p-6 bg-white shadow-md rounded-lg text-center">
      <h3 class="text-lg font-semibold text-gray-700">Habits completed this week</h3>
      <p class="text-4xl font-bold text-green-500 mt-2"><%= @completed_count %></p>
    </div>
    <div class="p-6 bg-white shadow-md rounded-lg text-center">
      <h3 class="text-lg font-semibold text-gray-700">Habits unfinished</h3>
      <p class="text-4xl font-bold text-red-500 mt-2"><%= @incomplete_count %></p>
    </div>
  </div>

  <!-- 已完成的习惯 -->
  <h3 class="text-2xl font-bold text-gray-800 mt-8">Completed times</h3>
  <ul class="mt-4">
    <% @completed_habits.each do |habit| %>
      <li class="p-4 bg-green-100 shadow-md rounded-lg mb-4">
        <span class="text-lg font-semibold text-gray-700"><%= habit.name %></span>
        <p class="text-gray-600">Number of completions:<%= habit.completed_times %></p>
      </li>
    <% end %>
  </ul>

  <!-- 未完成的习惯 -->
  <h3 class="text-2xl font-bold text-gray-800 mt-8">Unfinished times</h3>
  <ul class="mt-4">
    <% @incomplete_habits.each do |habit| %>
      <li class="p-4 bg-red-100 shadow-md rounded-lg mb-4">
        <span class="text-lg font-semibold text-gray-700"><%= habit.name %></span>
        <p class="text-gray-600">Number of unfinished:<%= habit.incomplete_times %></p>
      </li>
    <% end %>
  </ul>
</div>