<div class="max-w-4xl mx-auto mt-10">
  <%# <h1>Welcome, <%= @user.email %>!</h1> %>

  <h2 class="text-3xl font-bold text-gray-800 mb-6">数据统计</h2>
  <div class="grid grid-cols-2 gap-4">
    <div class="p-6 bg-white shadow-md rounded-lg text-center">
      <h3 class="text-lg font-semibold text-gray-700">本周完成习惯</h3>
      <p class="text-4xl font-bold text-green-500 mt-2"><%= @completed_count %></p>
    </div>
    <div class="p-6 bg-white shadow-md rounded-lg text-center">
      <h3 class="text-lg font-semibold text-gray-700">未完成习惯</h3>
      <p class="text-4xl font-bold text-red-500 mt-2"><%= @incomplete_count %></p>
    </div>
  </div>
</div>